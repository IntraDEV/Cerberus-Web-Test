<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with type="com.intradev.cerberus.web.client.resources.Resources" field="res" />
    <g:HTMLPanel>
    
    <g:PopupPanel styleName="keypassEditor-PopUpPanel" glassEnabled="true" autoHideEnabled="false" animationEnabled="true" glassStyleName="keypassEditor-PopUpPanel-glass" ui:field="popup">
        <g:VerticalPanel>
         
        
        <g:HTMLPanel>
            <g:Image styleName="image" resource="{res.cerberus_logo_small}"/>
            <div class="level0">
                   	<g:Label styleName="header" ui:field="header"> 
		        		Export your saved passwords to a csv
					</g:Label>
					
                   	<g:Label styleName="body" ui:field="deepInstructionsLabel" wordWrap="true"> 
		        		Click the button below to save your passwords to a local file in .csv format. Note that this will transmit your unencrypted passwords over an unsecure connection.
					</g:Label>
					
                                                        
                <div class="footer">  
	                
                    	<g:PushButton ui:field="okButton" styleName="cerberus_button">
                    	    Export
                    	    <!-- 
						    <g:upFace image="{res.btn_create_keycode_password_off}"/>
						    <g:upHoveringFace image="{res.btn_create_keycode_password_on}"/>
						    <g:downFace image="{res.btn_create_keycode_password_on}"/>
						     -->
						</g:PushButton>
						
                    	<g:PushButton ui:field="cancelButton" styleName="cerberus_button">
                    	    Cancel
                    	    <!-- 
						    <g:upFace image="{res.btn_create_keycode_password_off}"/>
						    <g:upHoveringFace image="{res.btn_create_keycode_password_on}"/>
						    <g:downFace image="{res.btn_create_keycode_password_on}"/>
						     -->
						</g:PushButton>
                	              
                </div>
           </div>
        </g:HTMLPanel>
        </g:VerticalPanel>
	</g:PopupPanel>    
	    
    </g:HTMLPanel>
</ui:UiBinder>
