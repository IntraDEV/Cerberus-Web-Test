<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with type="com.intradev.cerberus.web.client.resources.Resources" field="res" />
    <g:HTMLPanel>
    
    <g:PopupPanel styleName="keypassEditor-PopUpPanel" glassEnabled="true" autoHideEnabled="false" animationEnabled="true" glassStyleName="keypassEditor-PopUpPanel-glass" ui:field="popup">
        <g:VerticalPanel>
         
        
        <g:HTMLPanel>
            
            <div class="level0" >
                   	<g:Label styleName="header" ui:field="header"> 
		        		Change the keypass you use to secure your passwords
					</g:Label>
			</div>	
			 <div class="level2" >
                   	<g:Label styleName="body" ui:field="currentPasswordLabel" wordWrap="true"> 
		        		Enter the current keycode you use to unlock your passwords.
					</g:Label>
					
                    <g:PasswordTextBox ui:field="currentPassword" styleName="textEntry"/>

                    <g:Label styleName="body" ui:field="newPasswordLabel" wordWrap="true"> 
		        		Enter the new keycode you will use to unlock your passwords. This keycode cannot be empty.
					</g:Label>

                    <g:PasswordTextBox ui:field="newPassword" styleName="textEntry"/>
                                        
           </div>
        </g:HTMLPanel>
        <g:HTMLPanel>
                        <div class="footer">  
	                
                    	<g:PushButton ui:field="okButton" styleName="cerberus_button">
                    	    Change keycode
                    	    <!-- 
						    <g:upFace image="{res.btn_create_keycode_password_off}"/>
						    <g:upHoveringFace image="{res.btn_create_keycode_password_on}"/>
						    <g:downFace image="{res.btn_create_keycode_password_on}"/>
						     -->
						</g:PushButton>
						
                    	<g:PushButton ui:field="cancelButton" styleName="cerberus_button">
                    	    Cancel
                    	    <!-- 
						    <g:upFace image="{res.btn_create_keycode_password_off}"/>
						    <g:upHoveringFace image="{res.btn_create_keycode_password_on}"/>
						    <g:downFace image="{res.btn_create_keycode_password_on}"/>
						     -->
						</g:PushButton>
                	              
                </div>
        </g:HTMLPanel>
        
        </g:VerticalPanel>
	</g:PopupPanel>    
	    
    </g:HTMLPanel>
</ui:UiBinder>
